{
  "name": "@wearehere-labs/generic-form-format",
  "version": "1.0.1",
  "description": "Generic Form Format (GFF) - A JSON-based format for describing dynamic forms with an accompanying TypeScript library for creating form definitions",
  "main": "lib/dist/index.js",
  "types": "lib/dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/dist/index.d.ts",
      "require": "./lib/dist/index.js",
      "import": "./lib/dist/index.js"
    },
    "./package.json": "./package.json",
    "./schema": "./schema/form.schema.json"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf lib/dist coverage",
    "validate:examples": "node scripts/validate-examples.js",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "example:contact": "ts-node examples/typescript/contact-form.ts",
    "example:job": "ts-node examples/typescript/job-application.ts",
    "example:merge": "ts-node examples/typescript/merge-forms.ts",
    "example:fields": "ts-node examples/typescript/new-field-types.ts",
    "example:advanced": "ts-node examples/typescript/advanced-features.ts",
    "example:error": "ts-node examples/typescript/error-handling.ts",
    "example:dynamic": "ts-node examples/typescript/dynamic-conditional-form.ts",
    "example:all": "ts-node examples/typescript/all-field-types.ts"
  },
  "keywords": [
    "generic-form-format",
    "gff",
    "form",
    "json",
    "form-builder",
    "form-specification",
    "dynamic-forms",
    "form-schema",
    "typescript",
    "validation",
    "conditional-logic",
    "form-dependencies",
    "responsive-forms"
  ],
  "author": "Wearehere Labs",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "ajv": "^8.12.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "lib/dist",
    "schema",
    "examples/json",
    "examples/typescript",
    "examples/README.md",
    "README.md",
    "AI_GUIDE.md",
    "LICENSE.md"
  ]
}
